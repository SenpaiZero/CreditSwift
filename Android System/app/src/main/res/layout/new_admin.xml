<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2000000"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/lightBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/textView43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/bebas"
                android:text="NEW ADMIN"
                android:textAlignment="center"
                android:textColor="@color/darkRegister"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView47"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:text="USERNAME"
                android:textColor="@color/darkRegister"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newAdminUserTB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/darkRegister"
                android:drawableLeft="@drawable/user_img"
                android:drawablePadding="2dp"
                android:drawableTint="@color/darkRegister"
                android:elegantTextHeight="false"
                android:ems="12"
                android:fontFamily="@font/abel"
                android:hint="Username"
                android:inputType="text"
                android:textColor="@color/darkRegister"
                android:textColorHint="@color/darkRegister" />

            <TextView
                android:id="@+id/textView48"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:text="PASSWORD"
                android:textColor="@color/darkRegister"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newAdminPassTB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/darkRegister"
                android:drawableLeft="@drawable/password_img"
                android:drawablePadding="2dp"
                android:drawableTint="@color/darkRegister"
                android:elegantTextHeight="false"
                android:ems="12"
                android:fontFamily="@font/abel"
                android:hint="Password"
                android:inputType="text"
                android:password="false"
                android:textColor="@color/darkRegister"
                android:textColorHint="@color/darkRegister" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/newAdminCanel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/lightTxt"
                    android:fontFamily="@font/protest_strike"
                    android:text="CANCEL"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:cornerRadius="5dp" />

                <Button
                    android:id="@+id/newAdminApply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/lightTxt"
                    android:fontFamily="@font/protest_strike"
                    android:text="CREATE"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:cornerRadius="5dp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>