<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".changePassword">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@drawable/light_divider"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical"
        android:rotation="-45"
        android:scaleX="4"
        android:scaleY="4"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/top2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightLogin" />

        <ImageView
            android:id="@+id/bottom2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightRegister"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#6FFFFFFF"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/bebas_nue"
                android:text="CHANGE PASSWORD"
                android:textAlignment="center"
                android:textColor="@color/darkRegister"
                android:textSize="60sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:text="Current Password:"
                android:textColor="@color/darkRegister"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/currentPasswordTB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkRegister"
                android:drawableLeft="@drawable/password_img"
                android:drawableRight="@drawable/password_reveal"
                android:drawablePadding="5dp"
                android:drawableTint="@color/darkRegister"
                android:elegantTextHeight="false"
                android:ems="13"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/abel"
                android:hint="Current Password"
                android:password="true"
                android:textAllCaps="true"
                android:textColor="@color/darkRegister"
                android:textColorHint="@color/darkRegister" />

            <TextView
                android:id="@+id/textView49"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:text="New Password:"
                android:textColor="@color/darkRegister"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newPassTB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkRegister"
                android:drawableLeft="@drawable/password_img"
                android:drawableRight="@drawable/password_reveal"
                android:drawablePadding="5dp"
                android:drawableTint="@color/darkRegister"
                android:elegantTextHeight="false"
                android:ems="13"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/abel"
                android:hint="New Password"
                android:password="true"
                android:textAllCaps="true"
                android:textColor="@color/darkRegister"
                android:textColorHint="@color/darkRegister" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:text="Confirm New Password"
                android:textColor="@color/darkRegister"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newRePassTB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/darkRegister"
                android:drawableLeft="@drawable/password_img"
                android:drawableRight="@drawable/password_reveal"
                android:drawablePadding="5dp"
                android:drawableTint="@color/darkRegister"
                android:elegantTextHeight="false"
                android:ems="13"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/abel"
                android:hint="Confirm New Password"
                android:password="true"
                android:textAllCaps="true"
                android:textColor="@color/darkRegister"
                android:textColorHint="@color/darkRegister" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/changePassCancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/negativeButton"
                    android:text="Cancel"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/changePassConfirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/positiveButton"
                    android:text="Update"
                    app:cornerRadius="8dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/confirmationInclude"
        layout="@layout/confirmation_include"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/card_view"
        layout="@layout/custom_toast"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>