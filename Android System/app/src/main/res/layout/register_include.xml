<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/temp_logo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/protest_strike"
            android:text="REGISTER"
            android:textAlignment="center"
            android:textColor="@color/lightLogin"
            android:textSize="80sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/registerUserTB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/lightLogin"
            android:drawableLeft="@drawable/user_img"
            android:drawablePadding="5dp"
            android:drawableTint="@color/lightLogin"
            android:ems="13"
            android:fontFamily="@font/abel"
            android:hint="Username"
            android:inputType="text"
            android:textColor="@color/lightLogin"
            android:textColorHint="@color/lightLogin" />

        <EditText
            android:id="@+id/registerEmailTB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/lightLogin"
            android:drawableLeft="@drawable/email_img"
            android:drawablePadding="5dp"
            android:drawableTint="@color/lightLogin"
            android:ems="13"
            android:fontFamily="@font/abel"
            android:hint="Email"
            android:inputType="text"
            android:textColor="@color/lightLogin"
            android:textColorHint="@color/lightLogin" />

        <EditText
            android:id="@+id/registerPasswordTB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/lightLogin"
            android:drawableLeft="@drawable/password_img"
            android:drawableRight="@drawable/password_reveal"
            android:drawablePadding="5dp"
            android:drawableTint="@color/lightLogin"
            android:ems="13"
            android:fontFamily="@font/abel"
            android:hint="Password"
            android:inputType="text"
            android:password="true"
            android:textColor="@color/lightLogin"
            android:textColorHint="@color/lightLogin" />

        <EditText
            android:id="@+id/registerConfirmPasswordTB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/lightLogin"
            android:drawableLeft="@drawable/password_img"
            android:drawableRight="@drawable/password_reveal"
            android:drawablePadding="5dp"
            android:drawableTint="@color/lightLogin"
            android:ems="13"
            android:fontFamily="@font/abel"
            android:hint="Confirm Password"
            android:inputType="text"
            android:password="true"
            android:textColor="@color/lightLogin"
            android:textColorHint="@color/lightLogin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/lightBackground2"
                app:srcCompat="@null" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:fontFamily="@font/abel"
                android:text="OR"
                android:textAlignment="center"
                android:textColor="@color/lightLogin" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/lightBackground2"
                app:srcCompat="@null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/socialMediaCon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:divider="@drawable/empty_tall_divider"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageView
                android:id="@+id/fbLogin"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/fb" />

            <ImageView
                android:id="@+id/googleLogin"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/google" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/termCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightTxt"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I agree to "
                android:textColor="@color/lightLogin" />

            <TextView
                android:id="@+id/termTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:linksClickable="false"
                android:text="@string/terms"
                android:textColor="@color/lightLogin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:divider="@drawable/empty_tall_divider"
            android:dividerPadding="5dp"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/cancelRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/lightTxt"
                android:fontFamily="@font/protest_strike"
                android:text="CANCEL"
                android:textColor="@color/lightBackground"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/registerBtnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/lightTxt"
                android:fontFamily="@font/protest_strike"
                android:text="REGISTER"
                android:textColor="@color/lightBackground"
                app:cornerRadius="8dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>